---
import Layout from '../layouts/Layout.astro';
import { ScrollLayout } from '../components/ScrollLayout';
import { CyberHero } from '../components/CyberHero';
import { SkillMatrix } from '../components/SkillMatrix';
import { HoloCard } from '../components/HoloCard';
import { NavHUD } from '../components/NavHUD';
import Layout from '../layouts/Layout.astro';
import { ScrollLayout } from '../components/ScrollLayout';
import Layout from '../layouts/Layout.astro';
import { ScrollLayout } from '../components/ScrollLayout';
import Layout from '../layouts/Layout.astro';
import { ScrollLayout } from '../components/ScrollLayout';
import { ShellHero } from '../components/ShellHero';
import { SkillMatrix } from '../components/SkillMatrix';
import { HoloCard } from '../components/HoloCard';
import { NavHUD } from '../components/NavHUD';
import { ShellContact } from '../components/ShellContact';
import SEOKeywords from '../components/SEOKeywords.astro';
import { DevOpsNetwork } from '../components/DevOpsNetwork';
import Footer from '../components/Footer.astro';
import { EXPERIENCES, PROJECTS, ABOUT } from '../data/portfolio';
---

<Layout title="Vivek Kushwah | Cloud Architect">
	<DevOpsNetwork client:only="react" />
	<ScrollLayout client:load>
		<ShellHero client:load />

		<!-- About / Ops Breakdown -->
		<section id="about" class="mb-16">
			<div class="flex items-center gap-4 mb-10">
				<div class="h-[1px] bg-white/10 flex-grow"></div>
				<h2 class="text-neon-cyan font-mono tracking-widest uppercase">01 // Identity</h2>
				<div class="h-[1px] bg-white/10 flex-grow"></div>
			</div>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
				<div class="text-lg text-gray-400 leading-relaxed font-light">
					<p class="mb-6">{ABOUT.description}</p>
					<p class="text-white border-l-2 border-neon-pink pl-4 italic mb-8">{ABOUT.approach}</p>
					
					<!-- Education Block -->
					<div class="p-4 rounded-lg bg-white/5 border border-white/5 backdrop-blur-sm flex items-center gap-4 hover:bg-white/10 transition-colors duration-300">
						<div class="w-10 h-10 rounded-full bg-neon-cyan/20 flex items-center justify-center text-neon-cyan shrink-0">
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
								<path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.436 60.436 0 00-.491 6.347A48.627 48.627 0 0112 20.904a48.627 48.627 0 018.232-4.41 60.46 60.46 0 00-.491-6.347m-15.482 0a50.57 50.57 0 00-2.658-.813A59.905 59.905 0 0112 3.493a59.902 59.902 0 0110.499 5.24 50.552 50.552 0 00-2.658.813m-15.482 0A50.553 50.553 0 0112 13.489a50.551 50.551 0 0112-4.133m-15.482 0A50.55 50.55 0 0112 13.489a50.55 50.55 0 0112-4.133M6.342 16.92c.547.268 1.12.517 1.718.741M12 2.251c-1.353 0-2.7.206-4.004.591" />
							</svg>
						</div>
						<div>
							<div class="text-white font-medium">{ABOUT.education.school}</div>
							<div class="text-sm text-neon-cyan/80">{ABOUT.education.degree}</div>
						</div>
					</div>
				</div>
				<div class="grid grid-cols-2 gap-4">
					{ABOUT.stats.map(stat => (
						<div class="bg-[#112240]/30 border border-white/5 p-6 text-center hover:bg-[#112240]/50 hover:border-neon-cyan hover:shadow-[0_0_15px_rgba(0,243,255,0.2)] transition-all duration-300 cursor-default backdrop-blur-xl group">
							<div class="text-3xl font-bold text-white mb-1 group-hover:text-neon-cyan transition-colors">{stat.value}</div>
							<div class="text-xs text-gray-400 uppercase tracking-widest">{stat.label}</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Skills Matrix -->
		<section id="skills" class="mb-32">
			<div class="flex items-center gap-4 mb-10">
				<div class="h-[1px] bg-white/10 flex-grow"></div>
				<h2 class="text-neon-cyan font-mono tracking-widest uppercase">02 // Capabilities</h2>
				<div class="h-[1px] bg-white/10 flex-grow"></div>
			</div>
			<SkillMatrix client:visible />
		</section>

		<!-- Experience -->
		<section id="experience" class="mb-32">
			<div class="flex items-center gap-4 mb-10">
				<div class="h-[1px] bg-white/10 flex-grow"></div>
				<h2 class="text-neon-cyan font-mono tracking-widest uppercase">03 // Run Logs</h2>
				<div class="h-[1px] bg-white/10 flex-grow"></div>
			</div>
			<div class="space-y-6">
				{EXPERIENCES.map(exp => (
					<HoloCard 
						title={exp.role} 
						subtitle={`${exp.company} | ${exp.period}`}
						tags={exp.technologies.slice(0, 5)}
						client:visible
					>
						{exp.awards && (
							<div class="flex flex-wrap gap-2 mb-4">
								{exp.awards.map(award => (
									<span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-md text-[10px] font-bold uppercase tracking-wider bg-neon-yellow/10 text-neon-yellow border border-neon-yellow/20">
										<span>üèÜ</span>
										{award}
									</span>
								))}
							</div>
						)}
						<ul class="list-disc list-inside space-y-2 marker:text-neon-cyan text-gray-400">
							{exp.achievements.slice(0, 3).map(item => (
								<li>{item}</li>
							))}
						</ul>
					</HoloCard>
				))}
			</div>
		</section>

		<!-- Projects -->
		<section id="projects" class="mb-32">
			<div class="flex items-center gap-4 mb-10">
				<div class="h-[1px] bg-white/10 flex-grow"></div>
				<h2 class="text-neon-cyan font-mono tracking-widest uppercase">04 // Deployments</h2>
				<div class="h-[1px] bg-white/10 flex-grow"></div>
			</div>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
				{PROJECTS.map(project => (
					<HoloCard 
						title={project.title} 
						tags={project.technologies}
						client:visible
					>
						<p class="text-gray-400">{project.description}</p>
					</HoloCard>
				))}
			</div>
		</section>

	</ScrollLayout>

	<!-- Contact / Terminal (Full Width) -->
	<ShellContact client:visible />
	
	<Footer />

	<!-- Floating HUD Navigation -->
	<NavHUD client:load />

	<!-- Hidden SEO Injection -->
	<SEOKeywords />
</Layout>
