---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { title = 'Vivek Kushwah | Senior DevOps Engineer', description = 'Senior DevOps/SRE/Cloud Engineer specializing in AWS, Azure, Kubernetes, Terraform, CI/CD, and Platform Engineering' } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Cloud Architect & DevOps Engineer Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://wiwek13.github.io/" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="https://wiwek13.github.io/og-image.jpg" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://wiwek13.github.io/" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content="https://wiwek13.github.io/og-image.jpg" />
		
		<!-- SEO -->
		<meta name="keywords" content="DevOps, SRE, Cloud Engineer, AWS, Azure, Kubernetes, Terraform, CI/CD, Infrastructure, Platform Engineering, MLOps, GitOps, Observability" />
		<meta name="author" content="Vivek Kushwah" />
		<meta name="robots" content="index, follow" />
		<link rel="canonical" href="https://wiwek13.github.io/" />
		
		<!-- Theme Color -->
		<meta name="theme-color" content="#0c0c0c" />
	</head>
	<body class="bg-background text-gray-300 antialiased selection:bg-primary selection:text-black">
		<slot />
	</body>
</html>
