---
const navItems = [
	{ name: 'About', href: '#about' },
	{ name: 'Experience', href: '#experience' },
	{ name: 'Projects', href: '#projects' },
	{ name: 'Skills', href: '#skills' },
	{ name: 'Contact', href: '#contact' },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 glass-card border-b border-slate-800/60">
	<div class="container-custom">
		<div class="flex items-center justify-between h-16 px-4 sm:px-6 lg:px-8">
			<a href="#home" class="text-xl font-bold text-white">
				VK
			</a>
			
			<div class="hidden md:flex items-center space-x-1">
				{navItems.map((item) => (
					<a
						href={item.href}
						class="px-4 py-2 text-slate-400 hover:text-white rounded-lg transition-colors text-sm font-medium"
					>
						{item.name}
					</a>
				))}
			</div>

			<button
				id="mobile-menu-button"
				class="md:hidden text-slate-400 hover:text-white p-2"
				aria-label="Toggle menu"
			>
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
				</svg>
			</button>
		</div>

		<div id="mobile-menu" class="hidden md:hidden border-t border-slate-800/60 px-4 py-4">
			{navItems.map((item) => (
				<a
					href={item.href}
					class="block py-2 text-slate-400 hover:text-white transition-colors"
				>
					{item.name}
				</a>
			))}
		</div>
	</div>
</nav>

<script>
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const mobileMenu = document.getElementById('mobile-menu');

	if (mobileMenuButton && mobileMenu) {
		mobileMenuButton.addEventListener('click', () => {
			mobileMenu.classList.toggle('hidden');
		});

		const mobileLinks = mobileMenu.querySelectorAll('a');
		mobileLinks.forEach(link => {
			link.addEventListener('click', () => {
				mobileMenu.classList.add('hidden');
			});
		});
	}
</script>
